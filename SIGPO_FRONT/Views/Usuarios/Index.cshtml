            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal"><i class="fas fa-fw fa-times"></i> Cerrar</button>
                <button id="btnGuardarNuevo" type="button" class="btn btn-success"><i class="fas fa-fw fa-save"></i> Guardar</button>
